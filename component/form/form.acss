.form-input {
  width: 200px;
  height: 40px;
  margin-bottom: 10px;
  padding: 5px;
  border: 1px solid #ccc;
}

.form-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form-button {
   width: 120px;
   height: 40px;
   background-color: #007bff;
   color: #fff;
   border: none;
   border-radius: 4px;
}